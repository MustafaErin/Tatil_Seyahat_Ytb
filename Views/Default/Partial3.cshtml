@model List<Tatil_Seyahat_Ytb.Models.Entities.Blog>
@{
    int count = 0;
}

<div class="padding1">
    <h4>Son 6 Gezimiz</h4>
    <div class="box-left">
        @foreach (var item in Model)
        {
            count++;

            if (count == 1 || count == 2 || count == 3)
            {
                <div class="bot-img">
                    <a href="/Blog/BlogDetay/@item.Id">  <img src="@item.BlogImage" alt="" /></a>
                </div>
                <div class="bot-desc">
                    <p>@item.Acıklama.Substring(0, 70) </p>
                </div>
                <div class="clear"></div>
            }

        }
    </div>

    <div class="box1-left">
        @foreach (var item in Model)
        {
            count++;
            if (count == 4 || count == 5 || count == 6)
            {
                <div class="bot-img">
                    <a href="/Blog/BlogDetay/@item.Id"><img src="@item.BlogImage" alt="" /></a>
                </div>
                <div class="bot-desc1">
                    <p>@item.Acıklama.Substring(0, 70) </p>
                </div>
                <div class="clear"></div>

            }

        }

    </div>
</div>


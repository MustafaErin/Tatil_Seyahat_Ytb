@model List<Tatil_Seyahat_Ytb.Models.Entities.Blog>
@{ 
    var count = 0;
}



<div class="con-bot">
    @foreach (var item in Model)
    {
        count++;
        if (count == 1)
        {
            <div class="left">
                <div class="bot-left">
                    <img src="@item.BlogImage" />
                </div>
                <div class="left-text">
                    <h4>@item.Baslık</h4>
                    <span class="dollar">@item.Tarih.ToShortDateString()</span>
                    <p>@item.Acıklama.Substring(0,95)</p>
                    <p><a href="/Blog/BlogDetay/@item.Id"> <span class="read">Devamını Oku>></span></a></p>
                </div>
            </div>
        }
        else if (count == 2)
        {
            <div class="left">
                <div class="bot-left">
                    <img src="@item.BlogImage" />
                </div>
                <div class="left-text">
                    <h4>@item.Baslık</h4>
                    <span class="dollar">@item.Tarih.ToShortDateString()</span>
                    <p>@item.Acıklama.Substring(0, 95)</p>
                    <p><a href="/Blog/BlogDetay/@item.Id"> <span class="read">Devamını Oku>></span></a></p>
                </div>
            </div>
        }
        else
        {
            <div class="right">
                <div class="bot-left">
                    <img src="@item.BlogImage" />
                </div>
                <div class="left-text">
                    <h4>@item.Baslık</h4>
                    <span class="dollar">@item.Tarih.ToShortDateString()</span>
                    <p>@item.Acıklama.Substring(0, 95)</p>
                    <p><a href="/Blog/BlogDetay/@item.Id"> <span class="read">Devamını Oku>></span></a></p>
                </div>
            </div>
        }

    }



</div>

@model Tatil_Seyahat_Ytb.Models.Entities.Blog
@{
    ViewBag.Title = "AddBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="alert alert-success">Yeni Blog Ekle</h2>

<form method="post">
    <label>BAşlık</label>
    <br />
    @Html.TextBoxFor(x => x.Baslık, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    <br />
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    <br />
    @Html.TextBoxFor(x => x.Acıklama, new { @class = "form-control" })
    <br />
    <label>Blog İmage</label>
    <br />
    @Html.TextAreaFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    <br />
    <button class="btn btn-success">Bloğu Ekle</button>
</form>
@model Tatil_Seyahat_Ytb.Models.Entities.Blog
@{
    ViewBag.Title = "UpdateBlog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2 class="alert alert-success">Bloğu Güncelle</h2>

<form method="post">
    @Html.HiddenFor(x => x.Id)
    <label>BAşlık</label>
    <br />
    @Html.TextBoxFor(x => x.Baslık, new { @class = "form-control" })
    <br />
    <label>Tarih</label>
    <br />
    @Html.TextBoxFor(x => x.Tarih , new { @class = "form-control" })
    <br />
    <label>Blog İmage</label>
    <br />
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    <label>Açıklama</label>
    <br />
    @Html.TextAreaFor(x => x.Acıklama,10,1, new { @class = "form-control" })
    <br />
    <br />
    
    <button class="btn btn-success">Bloğu Güncelle</button>
</form>
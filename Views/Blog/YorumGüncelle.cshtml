@model Tatil_Seyahat_Ytb.Models.Entities.Yorumlar
@{
    ViewBag.Title = "YorumGüncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="alert alert-success">Yorum Güncelle</h2>


<div class="container">

    <form method="post">
        <label>Kullanıcı Adı</label>
        <br />
        @Html.TextBoxFor(x => x.KullanıcıAdı, new { @class = "form-control" })
        <br />
        <label>Mail</label>
        <br />
        @Html.TextBoxFor(x => x.Mail, new { @class = "form-control" })
        <br />
        <label>Yorum</label>
        <br />
        @Html.TextAreaFor(x => x.Yorum,8,1, new { @class = "form-control" })
        <br />
        <br />
        <button class="btn btn-success">Yorumu Güncelle</button>
    </form>
</div>

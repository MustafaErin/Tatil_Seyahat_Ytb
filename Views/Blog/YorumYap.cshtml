@*@model Tatil_Seyahat_Ytb.Models.Entities.Yorumlar*@


<div class="content-form">

    <h3>Bİr Yorum YApın</h3>

    <form method="post">

        <input type="hidden" placeholder="Id" name="BlogId" value="@ViewBag.deger" />

        <input type="text" placeholder="KullanıcıAdı" name="KullanıcıAdı" required />

        <input type="text" placeholder="Mail" name="Mail" required />

        <textarea placeholder="Yorum" name="Yorum"></textarea>

        <input type="submit" Value="Gönder" />

    </form>
</div>















